{
  "name": "@cto.af/editorconfig",
  "version": "0.15.3",
  "description": "EditorConfig File Locator and Interpreter for Node.js",
  "keywords": [
    "editorconfig",
    "core"
  ],
  "main": "lib/index.js",
  "contributors": [
    "Hong Xu (topbug.net)",
    "Jed Mao (https://github.com/jedmao/)",
    "Trey Hunner (http://treyhunner.com)",
    "Joe Hildebrand (https://github.com/hildjj/)"
  ],
  "directories": {
    "bin": "./bin",
    "lib": "./lib"
  },
  "scripts": {
    "clean": "rimraf lib",
    "parser": "peggy src/iniFile.peggy",
    "prebuild": "npm run clean",
    "build": "npm run parser && tsc",
    "pretest": "npm run lint && npm run build && cmake .",
    "test": "ctest .",
    "pretest:ci": "npm run pretest",
    "test:ci": "ctest -VV --output-on-failure .",
    "lint": "npm run tslint",
    "tslint": "tslint --project tsconfig.json --exclude package.json --exclude '**/*.js'",
    "prepub": "npm run lint && npm run build",
    "pub": "npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/hildjj/ctoaf-editorconfig.git"
  },
  "bugs": "https://github.com/hildjj/ctoaf-editorconfig/issues",
  "author": "EditorConfig Team",
  "license": "MIT",
  "dependencies": {
    "commander": "^9.4.0",
    "lru-cache": "^7.14.0",
    "semver": "^7.3.7",
    "sigmund": "^1.0.1"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.13",
    "@types/semver": "^7.3.12",
    "mocha": "^10.0.0",
    "peggy": "2.0.1",
    "rimraf": "^3.0.2",
    "should": "^13.2.3",
    "tslint": "^5.20.1",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=12.22"
  }
}
